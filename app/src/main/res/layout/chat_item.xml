<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/user_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="right|top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/usr_content"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/dia1n"
            android:maxWidth="300dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="5dp"
            android:textSize="20sp"
            android:text="4" />

        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/usr_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_baseline_person_24"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/fid_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="left|top"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginRight="5dp"
            android:id="@+id/fid_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_baseline_person_24"/>

        <TextView
            android:id="@+id/fid_content"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/dia2n"
            android:maxWidth="300dp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:text="4yå“¦"
            android:textSize="20sp" />

    </LinearLayout>
</LinearLayout>